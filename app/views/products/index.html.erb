
<%= link_to new_product_path, class: "btn btn-xs btn-success add-product-btn", id: "add-product-btn", data: {remote: true, 'toggle': "modal", 'target': '#product-modal' } do %> Add Product<% end %>

<div id="product-modal" class="modal product-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static"></div>



<div class="container">
  <table id="products_table" class="table table-bordered" >
    <thead>
    <tr class="header">
      <th>Name</th>
      <th>Cost Price</th>
      <th>Discount</th>
      <th>GST</th>
      <th>Total Price</th>
      <th colspan="2"><center>Action</center></th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |i| %>
        <tr>
          <td><%= i.name %></td>
          <td><%= i.cost_price %></td>
          <td><%= i.discount %></td>
          <td><%= i.gst %></td>
          <td><%= i.total_price %></td>

          <td><%= link_to edit_product_path(i.id), class: "btn btn-xs btn-warning edit-product-btn", id: "edit-product-btn", data: {remote: true, 'toggle': "modal", 'target': '#product-modal' } do %> Edit<% end %></td>

          <td><%= link_to :Delete, product_path(i.id), method: "delete", class: "btn btn-xs btn-danger" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<style>
  .add-product-btn{
    margin: 15px;
  }
</style>